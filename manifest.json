{
  "manifest_version": 2,
  "name": "Volume",
  "version": "1.0",
  "description": "Adds volume control to a tab",
  "icons": {
    "48": "src/assets/icon.svg"
  },
  "browser_action": {
    "default_icon": "src/assets/icon.svg",
    "default_title": "Volume",
    "default_popup": "src/index.html"
  },

  "permissions": ["activeTab"]
}
